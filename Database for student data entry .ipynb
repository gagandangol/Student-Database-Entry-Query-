
   "source": [
    "from tkinter import * #import all from tkinter\n",
    "\n",
    "# Saving the info in a file\n",
    "\n",
    "def save_info():\n",
    "    firstname_info=firstname.get()\n",
    "    lastname_info=lastname.get()\n",
    "    email_info=email.get()\n",
    "    address_info=address.get()\n",
    "    age_info=age.get()\n",
    "    phonenumber_info=phonenumber.get()    \n",
    "    print(firstname_info,age_info)\n",
    "    \n",
    "    with open(\"std_DB.txt\",'a') as file:\n",
    "        file.write(firstname_info+'\\n')\n",
    "        file.write(lastname_info+'\\n')\n",
    "        file.write(str(age_info)+'\\n')\n",
    "    \n",
    "\n",
    "studentDB=Tk() \n",
    "studentDB.title(\"DataCollection OF students of grade 10\") #title of Interface\n",
    "\n",
    "studentDB.geometry(\"750x500\") #size of Interface\n",
    "Heading=Label(text=\"Student Information\",font=('arial',20,'bold')) #heading\n",
    "Heading.pack()\n",
    "\n",
    "#creation the input variables\n",
    "firstname_text=Label(text=\"Firstname*\",fg='black',bg='light grey',font=('arial',10,'bold'))\n",
    "lastname_text=Label(text=\"Lastname*\",fg='black',bg='light grey',font=('arial',10,'bold'))\n",
    "age=Label(text=\"Age*\",fg='black',bg='light grey',font=('arial',10,'bold'))\n",
    "address_text=Label(text=\"Address*\",fg='black',bg='light grey',font=('arial',10,'bold'))\n",
    "phonenumber=Label(text=\"Phone number*\",fg='black',bg='light grey',font=('arial',10,'bold'))\n",
    "email=Label(text=\"Email*\",fg='black',bg='light grey',font=('arial',10,'bold'))\n",
    "\n",
    "#placement on the Interface x and y are coordinated\n",
    "\n",
    "firstname_text.place(x=50,y=100)\n",
    "lastname_text.place(x=50,y=150)\n",
    "age.place(x=50,y=200)\n",
    "address_text.place(x=50,y=250)\n",
    "phonenumber.place(x=50,y=300)\n",
    "email.place(x=50,y=350)\n",
    "\n",
    "# Assigning Variables\n",
    "\n",
    "firstname=StringVar()\n",
    "lastname=StringVar()\n",
    "email=StringVar()\n",
    "address=StringVar()\n",
    "age=IntVar()\n",
    "phonenumber=IntVar()\n",
    "#creating fill space\n",
    "\n",
    "firstname_entry=Entry(textvariable=firstname)\n",
    "lastname_entry=Entry(textvariable=lastname)\n",
    "age_entry=Entry(textvariable=age)\n",
    "address_entry=Entry(textvariable=address)\n",
    "phonenumber_entry=Entry(textvariable=phonenumber)\n",
    "email_entry=Entry(textvariable=email)\n",
    "\n",
    "#placement on the Interface x and y are coordinated\n",
    "firstname_entry.place(x=170,y=100)\n",
    "lastname_entry.place(x=170,y=150)\n",
    "age_entry.place(x=170,y=200)\n",
    "address_entry.place(x=170,y=250)\n",
    "phonenumber_entry.place(x=170,y=300)\n",
    "email_entry.place(x=170,y=350)\n",
    "\n",
    "Save=Button(text=\"save\",command=save_info,padx=15,fg='white',bg='light green',font=('arial',20,'bold'))\n",
    "Save.place(x=375,y=400)\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "\n",
    "studentDB.mainloop()"
   ]
